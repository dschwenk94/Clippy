# Viral Clipper Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here_change_this

# Optional: YouTube API Key (for read-only operations)
# YOUTUBE_API_KEY=your_api_key_here

# Optional: Custom directories
# DOWNLOADS_DIR=downloads
# CLIPS_DIR=clips
# CONFIGS_DIR=configs

# Optional: Processing settings
# MAX_CLIP_DURATION=60
# DEFAULT_CLIP_DURATION=30
# MAX_VIDEO_RESOLUTION=1080

# Note: OAuth credentials should be in client_secrets.json
# Never put OAuth secrets in environment variables!
